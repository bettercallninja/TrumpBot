# =================================================================
# TrumpBot Environment Configuration Template
# =================================================================
# Copy this file to .env and fill in your actual values
# This file can be safely committed to version control

# =================================================================
# TELEGRAM BOT CONFIGURATION (REQUIRED)
# =================================================================
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=@YourBotUsername
BOT_NAME=TrumpBot

# =================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/trumpbot

# =================================================================
# ESSENTIAL GAME SETTINGS
# =================================================================
MAX_ATTACKS_PER_DAY=50
ATTACK_COOLDOWN=5
DAILY_BONUS=20
UNLIMITED_MISSILES=true
FREE_STARS_ENABLED=true

# =================================================================
# SECURITY SETTINGS
# =================================================================
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=30
DEBUG_MODE=false

# =================================================================
# ADMIN CONFIGURATION
# =================================================================
ADMIN_USER_IDS=your_user_id_here
SUPER_ADMIN_USER_ID=your_user_id_here

# =================================================================
# BASIC FEATURE FLAGS
# =================================================================
PREMIUM_FEATURES=true
ANALYTICS_ENABLED=true
ACHIEVEMENTS_SYSTEM=true

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================
DEVELOPMENT_MODE=false
LOG_LEVEL=INFO

# =================================================================
# ADDITIONAL CONFIGURATION
# =================================================================
# See .env for complete configuration options
# Refer to documentation for detailed setup instructions
